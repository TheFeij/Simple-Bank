{
  "swagger": "2.0",
  "info": {
    "title": "Simple Bank",
    "description": "Package declaration for protocol buffer definitions.",
    "version": "1.1",
    "contact": {
      "name": "TheFeij",
      "url": "https://github.com/TheFeij",
      "email": "abolfazl.moradi.feijani@gmail.com"
    }
  },
  "tags": [
    {
      "name": "SimpleBank"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/create_account": {
      "post": {
        "summary": "create account",
        "description": "Use this API to create a new account",
        "operationId": "SimpleBank_CreateAccount",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbCreateAccountResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "tags": [
          "SimpleBank"
        ]
      }
    },
    "/v1/create_user": {
      "post": {
        "summary": "Create new user",
        "description": "Use this API to create a new user",
        "operationId": "SimpleBank_CreateUser",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbCreateUserResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbCreateUserRequest"
            }
          }
        ],
        "tags": [
          "SimpleBank"
        ]
      }
    },
    "/v1/delete_account/{id}": {
      "get": {
        "summary": "delete account",
        "description": "Use this API to delete an account",
        "operationId": "SimpleBank_DeleteAccount",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbDeleteAccountResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "description": "id of the account to be deleted",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "int64"
          }
        ],
        "tags": [
          "SimpleBank"
        ]
      }
    },
    "/v1/get_account/{id}": {
      "get": {
        "summary": "get account",
        "description": "Use this API to get information about an account",
        "operationId": "SimpleBank_GetAccount",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbGetAccountResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "description": "id of the account to be retrieved",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "int64"
          }
        ],
        "tags": [
          "SimpleBank"
        ]
      }
    },
    "/v1/list_accounts": {
      "get": {
        "summary": "list accounts",
        "description": "Use this API to get a list of user's accounts",
        "operationId": "SimpleBank_ListAccounts",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbListAccountsResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "pageId",
            "description": "page number",
            "in": "query",
            "required": false,
            "type": "string",
            "format": "int64"
          },
          {
            "name": "pageSize",
            "description": "size of each page",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int32"
          }
        ],
        "tags": [
          "SimpleBank"
        ]
      }
    },
    "/v1/login_user": {
      "post": {
        "summary": "Login user",
        "description": "Use this API to login",
        "operationId": "SimpleBank_LoginUser",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbLoginUserResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbLoginUserRequest"
            }
          }
        ],
        "tags": [
          "SimpleBank"
        ]
      }
    },
    "/v1/transfer": {
      "post": {
        "summary": "transfer money",
        "description": "Use this API to transfer money from one account to another",
        "operationId": "SimpleBank_Transfer",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbTransferResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbTransferRequest"
            }
          }
        ],
        "tags": [
          "SimpleBank"
        ]
      }
    },
    "/v1/update_user": {
      "patch": {
        "summary": "Update user",
        "description": "Use this API to update user information",
        "operationId": "SimpleBank_UpdateUser",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbUpdateUserResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "Message for updating a user request.",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbUpdateUserRequest"
            }
          }
        ],
        "tags": [
          "SimpleBank"
        ]
      }
    }
  },
  "definitions": {
    "pbAccount": {
      "type": "object",
      "properties": {
        "accountId": {
          "type": "string",
          "format": "int64",
          "description": "Unique identifier for the account."
        },
        "owner": {
          "type": "string",
          "description": "Owner of the account."
        },
        "balance": {
          "type": "string",
          "format": "int64",
          "description": "Balance of the account."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the account was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the account was last updated."
        },
        "deletedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the account was deleted."
        }
      },
      "description": "Represents a bank account."
    },
    "pbCreateAccountResponse": {
      "type": "object",
      "properties": {
        "account": {
          "$ref": "#/definitions/pbAccount"
        }
      },
      "title": "request message to create an account"
    },
    "pbCreateUserRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "title": "username of the new user"
        },
        "fullname": {
          "type": "string",
          "title": "full name of the new user"
        },
        "password": {
          "type": "string",
          "title": "password of the new user"
        },
        "email": {
          "type": "string",
          "title": "email of the new user"
        }
      },
      "title": "request message to create a new user"
    },
    "pbCreateUserResponse": {
      "type": "object",
      "properties": {
        "user": {
          "$ref": "#/definitions/pbUser"
        }
      },
      "title": "response message to create user request"
    },
    "pbDeleteAccountResponse": {
      "type": "object",
      "properties": {
        "account": {
          "$ref": "#/definitions/pbAccount"
        }
      },
      "title": "response message to delete account request"
    },
    "pbGetAccountResponse": {
      "type": "object",
      "properties": {
        "account": {
          "$ref": "#/definitions/pbAccount"
        }
      },
      "title": "represents the response to the get account rpc request"
    },
    "pbListAccountsResponse": {
      "type": "object",
      "properties": {
        "accounts": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/pbAccount"
          }
        }
      },
      "title": "represents the response to list accounts rpc request"
    },
    "pbLoginUserRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "title": "request message to login"
    },
    "pbLoginUserResponse": {
      "type": "object",
      "properties": {
        "user": {
          "$ref": "#/definitions/pbUser"
        },
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "sessionId": {
          "type": "string"
        },
        "accessTokenExpiresAt": {
          "type": "string",
          "format": "date-time"
        },
        "refreshTokenExpiresAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "title": "response message to a login request"
    },
    "pbTransferRequest": {
      "type": "object",
      "properties": {
        "fromAccountId": {
          "type": "string",
          "format": "int64",
          "title": "source account"
        },
        "toAccountId": {
          "type": "string",
          "format": "int64",
          "title": "destination account"
        },
        "amount": {
          "type": "integer",
          "format": "int32",
          "title": "amount of money to be transferred from from_account_id to to_account_id"
        }
      },
      "title": "represents a transfer request to transfer money from a account to another"
    },
    "pbTransferResponse": {
      "type": "object",
      "properties": {
        "transferId": {
          "type": "string",
          "format": "int64"
        },
        "srcAccountId": {
          "type": "string",
          "format": "int64"
        },
        "dstAccountId": {
          "type": "string",
          "format": "int64"
        },
        "incomingEntryId": {
          "type": "string",
          "format": "int64"
        },
        "outgoingEntryId": {
          "type": "string",
          "format": "int64"
        },
        "createAt": {
          "type": "string",
          "format": "date-time"
        },
        "amount": {
          "type": "integer",
          "format": "int32"
        }
      },
      "title": "represents the response to transfer rpc request"
    },
    "pbUpdateUserRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "description": "Username of the user to update."
        },
        "fullname": {
          "type": "string",
          "description": "Full name of the user (optional)."
        },
        "password": {
          "type": "string",
          "description": "New password for the user (optional)."
        },
        "email": {
          "type": "string",
          "description": "New email address for the user (optional)."
        }
      },
      "description": "Message for updating a user request."
    },
    "pbUpdateUserResponse": {
      "type": "object",
      "properties": {
        "user": {
          "$ref": "#/definitions/pbUser",
          "description": "Updated user information."
        }
      },
      "description": "Response message for updating a user."
    },
    "pbUser": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "fullname": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
